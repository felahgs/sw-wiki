    "eslint-plugin-storybook": "^0.11.2",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.3.0",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "storybook": "^8.4.7",
    "tailwindcss": "^3.4.17",
